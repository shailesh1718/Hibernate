<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/studentdb</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">admin</property>


        <property name="hibernate.hbm2ddl.auto">update</property> <!--If not specified , doesnot create table on its own. throws error-->
        <property name="hibernate.show_sql">true</property> <!--It shows the sql query that Hibernate is using BTS-->
        <!--<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property> optional-->


    </session-factory>
</hibernate-configuration>